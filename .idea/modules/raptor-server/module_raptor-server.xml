<?xml version="1.0" encoding="UTF-8"?>
<project name="module_raptor-server" default="compile.module.raptor-server">
  <dirname property="module.raptor-server.basedir" file="${ant.file.module_raptor-server}"/>
  
  <property name="module.jdk.home.raptor-server" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.raptor-server" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.raptor-server" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.raptor-server" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="raptor-server.output.dir" value="${module.raptor-server.basedir}/../../../out/production/raptor-server"/>
  <property name="raptor-server.testoutput.dir" value="${module.raptor-server.basedir}/../../../out/test/raptor-server"/>
  
  <path id="raptor-server.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="raptor-server.module.production.classpath">
    <path refid="${module.jdk.classpath.raptor-server}"/>
  </path>
  
  <path id="raptor-server.runtime.production.module.classpath">
    <pathelement location="${raptor-server.output.dir}"/>
  </path>
  
  <path id="raptor-server.module.classpath">
    <path refid="${module.jdk.classpath.raptor-server}"/>
    <pathelement location="${raptor-server.output.dir}"/>
  </path>
  
  <path id="raptor-server.runtime.module.classpath">
    <pathelement location="${raptor-server.testoutput.dir}"/>
    <pathelement location="${raptor-server.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.raptor-server">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.raptor-server">
    <patternset refid="excluded.from.module.raptor-server"/>
  </patternset>
  
  
  <target name="compile.module.raptor-server" depends="compile.module.raptor-server.production,compile.module.raptor-server.tests" description="Compile module raptor-server"/>
  
  <target name="compile.module.raptor-server.production" depends="register.custom.compilers" description="Compile module raptor-server; production classes"/>
  
  <target name="compile.module.raptor-server.tests" depends="register.custom.compilers,compile.module.raptor-server.production" description="compile module raptor-server; test classes" unless="skip.tests"/>
  
  <target name="clean.module.raptor-server" description="cleanup module">
    <delete dir="${raptor-server.output.dir}"/>
    <delete dir="${raptor-server.testoutput.dir}"/>
  </target>
</project>