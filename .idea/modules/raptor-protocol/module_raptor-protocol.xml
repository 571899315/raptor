<?xml version="1.0" encoding="UTF-8"?>
<project name="module_raptor-protocol" default="compile.module.raptor-protocol">
  <dirname property="module.raptor-protocol.basedir" file="${ant.file.module_raptor-protocol}"/>
  
  <property name="module.jdk.home.raptor-protocol" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.raptor-protocol" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.raptor-protocol" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.raptor-protocol" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="raptor-protocol.output.dir" value="${module.raptor-protocol.basedir}/../../../out/production/raptor-protocol"/>
  <property name="raptor-protocol.testoutput.dir" value="${module.raptor-protocol.basedir}/../../../out/test/raptor-protocol"/>
  
  <path id="raptor-protocol.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="raptor-protocol.module.production.classpath">
    <path refid="${module.jdk.classpath.raptor-protocol}"/>
  </path>
  
  <path id="raptor-protocol.runtime.production.module.classpath">
    <pathelement location="${raptor-protocol.output.dir}"/>
  </path>
  
  <path id="raptor-protocol.module.classpath">
    <path refid="${module.jdk.classpath.raptor-protocol}"/>
    <pathelement location="${raptor-protocol.output.dir}"/>
  </path>
  
  <path id="raptor-protocol.runtime.module.classpath">
    <pathelement location="${raptor-protocol.testoutput.dir}"/>
    <pathelement location="${raptor-protocol.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.raptor-protocol">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.raptor-protocol">
    <patternset refid="excluded.from.module.raptor-protocol"/>
  </patternset>
  
  
  <target name="compile.module.raptor-protocol" depends="compile.module.raptor-protocol.production,compile.module.raptor-protocol.tests" description="Compile module raptor-protocol"/>
  
  <target name="compile.module.raptor-protocol.production" depends="register.custom.compilers" description="Compile module raptor-protocol; production classes"/>
  
  <target name="compile.module.raptor-protocol.tests" depends="register.custom.compilers,compile.module.raptor-protocol.production" description="compile module raptor-protocol; test classes" unless="skip.tests"/>
  
  <target name="clean.module.raptor-protocol" description="cleanup module">
    <delete dir="${raptor-protocol.output.dir}"/>
    <delete dir="${raptor-protocol.testoutput.dir}"/>
  </target>
</project>