<?xml version="1.0" encoding="UTF-8"?>
<project name="module_raptor-registry" default="compile.module.raptor-registry">
  <dirname property="module.raptor-registry.basedir" file="${ant.file.module_raptor-registry}"/>
  
  <property name="module.jdk.home.raptor-registry" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.raptor-registry" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.raptor-registry" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.raptor-registry" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="raptor-registry.output.dir" value="${module.raptor-registry.basedir}/../../../out/production/raptor-registry"/>
  <property name="raptor-registry.testoutput.dir" value="${module.raptor-registry.basedir}/../../../out/test/raptor-registry"/>
  
  <path id="raptor-registry.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="raptor-registry.module.production.classpath">
    <path refid="${module.jdk.classpath.raptor-registry}"/>
  </path>
  
  <path id="raptor-registry.runtime.production.module.classpath">
    <pathelement location="${raptor-registry.output.dir}"/>
  </path>
  
  <path id="raptor-registry.module.classpath">
    <path refid="${module.jdk.classpath.raptor-registry}"/>
    <pathelement location="${raptor-registry.output.dir}"/>
  </path>
  
  <path id="raptor-registry.runtime.module.classpath">
    <pathelement location="${raptor-registry.testoutput.dir}"/>
    <pathelement location="${raptor-registry.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.raptor-registry">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.raptor-registry">
    <patternset refid="excluded.from.module.raptor-registry"/>
  </patternset>
  
  
  <target name="compile.module.raptor-registry" depends="compile.module.raptor-registry.production,compile.module.raptor-registry.tests" description="Compile module raptor-registry"/>
  
  <target name="compile.module.raptor-registry.production" depends="register.custom.compilers" description="Compile module raptor-registry; production classes"/>
  
  <target name="compile.module.raptor-registry.tests" depends="register.custom.compilers,compile.module.raptor-registry.production" description="compile module raptor-registry; test classes" unless="skip.tests"/>
  
  <target name="clean.module.raptor-registry" description="cleanup module">
    <delete dir="${raptor-registry.output.dir}"/>
    <delete dir="${raptor-registry.testoutput.dir}"/>
  </target>
</project>